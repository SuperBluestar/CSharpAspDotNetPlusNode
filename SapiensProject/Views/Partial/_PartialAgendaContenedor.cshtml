    $('#fechaIni').datepicker({ format: 'dd/mm/yyyy', autoclose: true, language: "es", daysOfWeekHighlighted: "0,6", todayHighlight: true }).attr('readonly', 'readonly');
    $('[data-toggle="tooltip"]').tooltip();
