            $('#DivTareaTarde').hide();
            $('#ddlTareaTarde').val(1);
            $('#DivTema').show();
            $('#DivDescripcion').show();            
            $('#DivFileUpload').show();
        }
        else if (idTipoTask == 2) {
            $('#ModalCrearTaskTit').html('Actividad Virtual');
            $('#LabelFechaInicio').text('Fecha de Inicio:');
            $('#_idTipoTask').val(1);
            $('.label_materia').show();
            $('#_1').show();
            //GetCalificacion();
